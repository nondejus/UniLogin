{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "target": "es6",
    "moduleResolution": "node"
  },
  "exclude": [
    "**/build",
    "**/dist",
    "@unilogin/commons/src**",
    "@unilogin/relayer/src**",
    "@unilogin/sdk/src**",
    "@unilogin/react/src**",
    "@unilogin/ops/src**"
  ]
}
